<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

<!-- Update Business Contact List -->
<div class="contatiner row justify-content-center">
    <div class="row">
        <div class = "offset-md-3-md-8 ">
            <h1><%= title %></h1>

            <form class="form" method ="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id = "nameTextField" placeholder="Enter the book title"
                    name="name" required></div>
                <div class="form-group">
                        <label for="authorTextField">Author</label>
                        <input type="text" class="form-control"
                        id = "authorTextField" placeholder="Enter the author"
                        name="author" required>
                    </div>
                <div class="form-group">
                        <label for="publishedTextField">Year</label>
                        <input type="text" class="form-control"
                        id = "publishedTextField" placeholder="Enter the year of publication"
                        name="published" required>
                    </div> 
                <div class="form-group">
                        <label for="descriptionTextArea">Description</label>
                        <textarea type="text" class="form-control"
                        id = "descriptionTextArea" placeholder="brief description of book"
                        name="description"
                        required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="priceTextField">Price</label>
                        <input type="text" class="form-control"
                        id = "priceTextField" placeholder="Enter the price"
                        name="price" required>
                    </div>      
                    
                    <button class="btn btn-primary" type ="submit">Submit</button>
                    <a href="/book-list" class="btn btn-warning">Cancel</a>
            </form>
        </div>
    </div>
</div>

  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  




